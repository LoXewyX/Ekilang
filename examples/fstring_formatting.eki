print(f"Binary: {num:b}")
print(f"Hex: {num:x}")
print(f"Hex (upper): {num:X}")

big_num = 12345.6789
print(f"Scientific: {big_num:e}")

x = 10
print(f"{{x}} = {x}")
print(f"{{ nested }}")

width = 1920
height = 1080
print(f"{width=}, {height=}")

pi = 3.14159265
print(f"{pi=:.2f}")

age = 25
status = f"Status: {'Adult' if age >= 18 else 'Minor'}"
print(status)

text = "hello world"
print(f"Uppercase: {text.upper()}")

