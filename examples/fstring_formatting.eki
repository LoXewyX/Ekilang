x2 = 10
y2 = 20
print(f"Sum: {x2 + y2}, Product: {x2 * y2}, Ratio: {x2 / y2:.2f}")

num2 = 7
print(f"[{num2:5}]")

name2 = "Charlie"
age2 = 35
salary = 75000.50
rating = 0.92
print(f"{name2:<12} | Age: {age2:>3} | Salary: {salary:>10,.2f} | Rating: {rating:.1%}")

class Point {
    fn __init__(self, x, y) {
        self.x = x
        self.y = y
    }
}
p = Point(100, 200)
print(f"Point: ({p.x}, {p.y})")

data = {"coords": [10, 20, 30]}
